{
  "title": "Simulator Metrics by Tower",
  "uid": "sim-metrics-v1",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "editable": true,
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "towerId",
        "label": "Tower",
        "datasource": null,
        "query": "label_values(telemetry_ingest_saved_total, towerId)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": false
      },
      {
        "type": "query",
        "name": "metric",
        "label": "Metric",
        "datasource": null,
        "query": "label_values(simulator_metric_value{towerId=~\"$towerId\"}, name)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Current: $metric",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": null,
      "repeat": "metric",
      "maxPerRow": 4,
      "fieldConfig": { "defaults": { "decimals": 2 } },
      "targets": [
        { "expr": "sum(simulator_metric_value{towerId=~\"$towerId\", name=~\"$metric\"})" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Trend: $metric",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "datasource": null,
      "repeat": "metric",
      "maxPerRow": 2,
      "fieldConfig": { "defaults": { "decimals": 2 } },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" }, "tooltip": { "mode": "single" } },
      "targets": [
        { "expr": "simulator_metric_value{towerId=~\"$towerId\", name=~\"$metric\"}", "legendFormat": "{{name}} ({{units}})" }
      ]
    }
  ]
}
