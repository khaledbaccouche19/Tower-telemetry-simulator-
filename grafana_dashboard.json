{
  "dashboard": {
    "id": null,
    "title": "5Sky Tower Monitoring Dashboard",
    "tags": ["towers", "siteboss", "telemetry"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "SiteBoss Pull Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(siteboss_pull_success_total{towerId=\"49\"}[5m]) / rate(siteboss_pull_started_total{towerId=\"49\"}[5m]) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "green",
                  "value": 80
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "SiteBoss Pull Duration",
        "type": "stat",
        "targets": [
          {
            "expr": "siteboss_pull_duration_seconds_sum / siteboss_pull_duration_seconds_count",
            "legendFormat": "Avg Duration"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 3,
        "title": "SiteBoss Temperature Sensors",
        "type": "stat",
        "targets": [
          {
            "expr": "siteboss_sensor_value{name=\"Temp Bottom\",towerId=\"49\"}",
            "legendFormat": "Bottom Temp"
          },
          {
            "expr": "siteboss_sensor_value{name=\"Temp Top\",towerId=\"49\"}",
            "legendFormat": "Top Temp"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "blue",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 25
                },
                {
                  "color": "red",
                  "value": 35
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "SiteBoss Pull Errors",
        "type": "stat",
        "targets": [
          {
            "expr": "siteboss_pull_errors_total{towerId=\"49\"}",
            "legendFormat": "Total Errors"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "SiteBoss Pull Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(siteboss_pull_success_total{towerId=\"49\"}[5m])",
            "legendFormat": "Successful Pulls/min"
          },
          {
            "expr": "rate(siteboss_pull_errors_total{towerId=\"49\"}[5m])",
            "legendFormat": "Failed Pulls/min"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yAxes": [
          {
            "label": "Pulls per minute",
            "min": 0
          }
        ]
      },
      {
        "id": 6,
        "title": "SiteBoss Temperature Trends",
        "type": "graph",
        "targets": [
          {
            "expr": "siteboss_sensor_value{name=\"Temp Bottom\",towerId=\"49\"}",
            "legendFormat": "Bottom Temperature"
          },
          {
            "expr": "siteboss_sensor_value{name=\"Temp Top\",towerId=\"49\"}",
            "legendFormat": "Top Temperature"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "yAxes": [
          {
            "label": "Temperature (Â°C)",
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "Backend API Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{uri=\"/api/siteboss/latest\"}[5m])",
            "legendFormat": "Latest Data Requests/sec"
          },
          {
            "expr": "rate(http_server_requests_seconds_count{uri=\"/api/siteboss/pull\"}[5m])",
            "legendFormat": "Pull Requests/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "yAxes": [
          {
            "label": "Requests per second",
            "min": 0
          }
        ]
      },
      {
        "id": 8,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"backend\"}",
            "legendFormat": "Backend"
          },
          {
            "expr": "up{job=\"prometheus\"}",
            "legendFormat": "Prometheus"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      }
    ]
  }
}






